<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#40FFFFFF">
    <item>
        <shape android:shape="rectangle">
            <corners
                android:radius="37dp" />
            <gradient
                android:type="linear"
                android:angle="120"
                android:startColor="#EB7D1F"
                android:centerColor="#EB5D21"
                android:endColor="#EA9D1D" />

            <stroke
                android:width="2dp"
                android:color="@color/black" />
        </shape>
    </item>
</ripple>