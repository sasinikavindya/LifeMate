<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <!-- Content Container -->
    <LinearLayout
        android:id="@+id/contentContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNav">

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Sleep Tracker"
            android:textColor="@color/white"
            android:textSize="34sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"/>

        <!-- Sleep Icon -->
        <ImageView
            android:id="@+id/ivSleep"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_sleep"
            android:layout_marginBottom="24dp"/>

        <!-- Current Sleep Display -->
        <TextView
            android:id="@+id/tvCurrentSleep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Today: 0 hours"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:layout_marginBottom="32dp"/>

        <!-- Hours Input Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#9B77D9"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <EditText
                android:id="@+id/etSleepHours"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="Enter hours of sleep"
                android:inputType="numberDecimal"
                android:padding="16dp"
                android:textColor="@color/black" />
        </androidx.cardview.widget.CardView>

        <!-- Notes Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="24dp"
            app:cardBackgroundColor="#9A76D7"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <EditText
                android:id="@+id/etSleepNotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="top"
                android:hint="Notes (optional)"
                android:inputType="textMultiLine"
                android:minLines="3"
                android:padding="16dp" />
        </androidx.cardview.widget.CardView>

        <!-- Buttons -->
        <Button
            android:id="@+id/btnAddSleep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#9B1ECE"
            android:padding="16dp"
            android:text="Log Sleep"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:cornerRadius="8dp" />

        <Button
            android:id="@+id/btnResetSleep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:backgroundTint="#9A1ECC"
            android:padding="16dp"
            android:text="Reset Today's Sleep"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:cornerRadius="8dp" />

    </LinearLayout>

    <!-- Navigation Bar -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#30FFFFFF"
        app:itemIconSize="36dp"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_nav_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>